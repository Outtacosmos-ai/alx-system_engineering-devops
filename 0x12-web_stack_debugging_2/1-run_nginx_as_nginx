#!/usr/bin/env bash
# Configures Nginx to run as nginx user and listen on port 8080

# Step 1: Change user to nginx in the Nginx configuration
sed -i 's/user .*/user nginx;/' /etc/nginx/nginx.conf

# Step 2: Change the port in the default server block to 8080
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-available/default

# Step 3: Restart Nginx service
service nginx restart
