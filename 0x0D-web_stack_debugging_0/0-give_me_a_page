#!/usr/bin/env bash
# Connect to the Docker container and fix the Apache setup to serve "Hello Holberton"

docker exec -it determined_engelbart /bin/bash << 'EOF'
# Check if Apache is running
service apache2 status

# Start Apache if not running
service apache2 start

# Create or update the index.html file
echo "Hello Holberton" > /var/www/html/index.html

# Ensure Apache configuration is correct
# (Assuming default configuration is used)

# Restart Apache to apply changes
service apache2 restart
EOF
